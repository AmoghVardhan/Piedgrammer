<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.com.example.android.piedgrammer.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1"
        android:text="Welcome To Piedgrammer"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_gravity="center">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.10">

        <ImageView
            android:id="@+id/CameraClick"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/camera_icon"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:onClick="openCameraOnClick"/>
        <ImageView
            android:id="@+id/Available"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/piedpath"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:onClick="piedPathPickLaunch"/>
        <ImageView
            android:id="@+id/PickImage"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/photo_pick"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:onClick="galleryPick"/>
    </LinearLayout>
</LinearLayout>
